pipeline {
    agent any
    environment {
        VITE_BUILD_DIR = 'dist'
    }
    stages {
        stage('Checkout') {
            steps { checkout scm }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm ci'
            }
        }
        stage('Build & Test') {
            steps {
                script {
                    bat 'npm run build'
                    bat 'npm run test'
                }
            }
        }
        stage('Archive Artifacts') {
            steps {
                // Saves the built static files (from the dist folder) as artifacts
                archiveArtifacts artifacts: "${VITE_BUILD_DIR}/**", fingerprint: true
                echo "Vite build artifacts saved from ${VITE_BUILD_DIR}."
            }
        }
        stage('Deploy (Example)') {
            steps {
                script {
                    echo "The build output is ready in the ${VITE_BUILD_DIR} directory for deployment."
                }
            }
        }
    }
    post {
        always {
            // Clean up the workspace after the build
            cleanWs()
        }
    }
}
