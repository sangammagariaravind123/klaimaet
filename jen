pipeline {
    agent any
    environment {
        VITE_BUILD_DIR = 'dist'
    }
    stages {
        stage('Checkout') {
            steps { checkout scm }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm ci'
            }
        }
        stage('Build & Test') {
            steps {
                script {
                    bat 'npm run build'
                }
            }
        }
        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: "${VITE_BUILD_DIR}/**", fingerprint: true
                echo "Vite build artifacts saved from ${VITE_BUILD_DIR}."
            }
        }
        stage('Deploy (Example)') {
            steps {
                script {
                    bat 'npm run deploy'
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
//dd
