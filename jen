pipeline {
    agent none
    options { timestamps(); timeout(time: 15, unit: 'MINUTES') }
    environment {
        VITE_BUILD_DIR = 'dist'
    }
    stages {
        stage('Checkout') {
            agent { label 'built-in' }
            steps {
                checkout scm
            }
        }
        stage('Where am I (Controller)') {
            agent { label 'built-in' }
            steps {
                echo 'Running on CONTROLLER'
                echo "NODE = ${env.NODE_NAME}"
                echo "WORKSPACE = ${env.WORKSPACE}"
            }
        }
        stage('Install Dependencies') {
            agent { label 'win' }
            steps {
                bat '''
                echo Running on AGENT: %COMPUTERNAME%
                if exist out rmdir /s /q build
                npm ci
                '''
            }
        }
        stage('Build & Test') {
            agent { label 'win' }
            steps {
                script {
                    bat 'npm run build'
                }
            }
        }
        stage('Archive Artifacts') {
            agent { label 'win' }
            steps {
                archiveArtifacts artifacts: "${VITE_BUILD_DIR}/**", fingerprint: true
                echo "Vite build artifacts saved from ${VITE_BUILD_DIR}."
            }
        }
        stage('Deploy (Example)') {
            agent { label 'win' }
            steps {
                script {
                    bat '''
                    git config --global user.name "Aravind Chandra"
                    git config --global user.email "sangammagariaravind123@gmail.com"
                    npm run deploy
                    '''
                }
            }
            post {
                always {
                    cleanWs()
                }
            }
        }
    }
}
//
